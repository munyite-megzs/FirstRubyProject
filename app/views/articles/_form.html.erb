<!-- the form accepts "multpart" data -->
<%= form_for(@article, html: {multpart: true}) do |f| %>
  <ul>
  <% @article.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
<!-- an interfce for targging articles -->
  <p>
  <%= f.label :tag_list %><br />
  <%= f.text_field :tag_list %>
</p>
<!-- an interfce for images -->

<p>
   <% if @article.image.exists? %>
    <%= image_tag @article.image.url %><br/>
    <% end %>

  <%= f.label :image, "Attach an Image" %><br />
  <%= f.file_field :image %>
</p>

  <p>
    <%= f.submit %>
  </p>
<% end %>